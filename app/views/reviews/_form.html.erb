<%= form_for @review do |f| %>
    <%= f.hidden_field :video_id, value: @video.id%>
    <%= f.hidden_field :user_id, value: @user.id%>
    <p><%= f.label "Content" %></p>
    <p><%= f.text_area :content %></p>
    <p><%= f.label :kill_rating %></p>
    <p>Thrill: <%= f.radio_button :kill_rating, value: "1" %></p>
    <p>Kill: <%= f.radio_button :kill_rating, value: "0" %></p>
    <p><%= f.submit %></p>
<% end %>