<div>
    <h1><%= @genre.name%></h1>
    <%= image_tag @genre.img_url, class: "genre-image "%>
    <p>Bio: <%= @genre.bio%></p>
</div>
<div class="container">
    <div class="card-columns">
        <% @genre.videos.each do |video| %>
            <div class="card border-primary mb-3" style="max-width: 18rem;">
                <%= link_to image_tag(video.img_url, class:"card-img-top"), video %>
                <div class="card-body">
                <h4 class="card-title"><%= link_to video.title, video %></h4>
                </div>
            </div>
        <% end %>
    </div>
</div>